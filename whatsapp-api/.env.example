# Puerto del servidor
PORT=3000

# API Key para autenticación
API_KEY=whatsapp-api-key-2024

# URL para webhook (opcional)
# WEBHOOK_URL=http://tu-servidor.com/webhook

# IP del servidor para generar URLs de archivos multimedia
SERVER_IP=localhost
# O usa tu IP pública: SERVER_IP=tu-ip-publica

# Entorno de ejecución
NODE_ENV=production

# Configuración de Puppeteer (dejar que use su propia versión)
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Configuración de sesiones
SESSIONS_DIR=./sessions
CACHE_DIR=./.wwebjs_cache
AUTH_DIR=./.wwebjs_auth

# Configuración de red (sin HTTPS por simplicidad)
DISABLE_HTTPS=true
FORCE_HTTP=true